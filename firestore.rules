rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User workout data - users can only access their own data
    match /users/{userId}/workouts/{workoutId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Ensure data validation
      allow create: if request.auth != null 
                    && request.auth.uid == userId
                    && request.resource.data.keys().hasAll(['type', 'duration', 'intensity', 'date'])
                    && request.resource.data.duration is number
                    && request.resource.data.duration > 0;
    }
    
    // Optional: User profile data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
